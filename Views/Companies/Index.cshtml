@model IEnumerable<PensionSystem.Entities.Models.Company>

@{
    ViewData["Title"] = "Companies";
    ViewData["SubTitle"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card">
    <div class="card-header">
        <a asp-action="Create" class="btn btn-primary"><i class="fa fa-plus"></i> Add</a>
    </div>
    <div class="card-body">
        @if (Model != null)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Name) </th>
                        <th>@Html.DisplayNameFor(model => model.ShortName)</th>
                        <th>@Html.DisplayNameFor(model => model.Order)</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Name) </td>
                            <td>@Html.DisplayFor(modelItem => item.ShortName)</td>
                            <td>@Html.DisplayFor(modelItem => item.Order)</td>
                            <td><a class="btn btn-warning btn-block" href="@Url.Action("Edit", "Companies", new { id = item.Id })"><i class="fa-solid fa-pen-to-square"></i> Edit</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div>No Companies Found in DB</div>
        }

    </div>
    <div class="card-footer">
    </div>
</div>

