@model PensionSystem.ViewModels.BankVM
@{
    Layout = null;
}
<form id="CreateUpdate">
    <input asp-for="Id" type="hidden" />
    <div class="row ">
        <div class="col-md-12 text-danger text-bold" id="ErrorDiv">
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="@Model.Name"></label>
                <input asp-for="@Model.Name" class="form-control" />
                <span asp-validation-for="@Model.Name"></span>
            </div>
        </div>

    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="@Model.ShortName"></label>
                <input asp-for="@Model.ShortName" class="form-control" />
                <span asp-validation-for="@Model.ShortName"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="@Model.Limit"></label>
                <input asp-for="@Model.Limit" class="form-control" />
                <span asp-validation-for="@Model.Limit"></span>
            </div>
        </div>
    </div>
</form>
