@using Pension.Entities.Helpers
@model List<PensionSystem.Entities.DTOs.WWFSanctionDTO>
@{
    Layout = null;
}
@if (Model != null)
{

    @if (Model.Count > 0)
    {
        <table class="table" id="tableId">
            <thead>
                <tr>
                    <th>Claimant</th>
                    <th>Number</th>
                    <th>Date</th>
                    <th>Rate</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Claimant</td>
                        <td>@item.Number</td>
                        <td>@UserFormat.GetDate(item.Date)</td>
                        <td>@UserFormat.GetAmount(item.Rate)</td>

                        <td>
                            <button onclick="AddOrUpdate(@item.Id)" class="btn btn-warning"><i class="fa fa-edit"></i></button>|
                            <button onclick="Delete(@item.Id)" class="btn btn-danger"><i class="fa fa-trash"></i></button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <script>
            $(document).ready(function (e) {
                $("#tableId").dataTable({
                    "ordering": false
                });
            });
        </script>
    }
}
