@using Pension.Entities.Helpers
@model List<PensionSystem.Entities.DTOs.WWFReimbursmentDTO>
@{
    Layout = null;
}
@if (Model != null)
{

    @if (Model.Count > 0)
    {
        <table class="table" id="tableId">
            <thead>
                <tr>
                    <th>Claimant</th>
                    <th>Period</th>
                    <th>Ch.No</th>
                    <th>Ch.Date</th>
                    <th>IsReimbursed</th>
                    <th>Remarks</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.WWFSanction.Claimant</td>
                        <td>@UserFormat.GetMonthYear(item.From) -> @UserFormat.GetMonthYear(item.To) </td>
                        <td>@item.ChequeNo</td>
                        <td>@UserFormat.GetDate(item.ChequeDate)</td>
                        <td>
                            @if (item.IsReimbursed)
                            {
                                <span>Yes</span>
                            }
                            else
                            {
                                <button onclick="Reimbursement(@item.Id)" class="btn btn-warning" disabled><i class="fa fa-edit"></i></button>
                            }
                        </td>
                        <td>@item.Remarks</td>
                        <td>
                            <button onclick="AddOrUpdate(@item.Id)" class="btn btn-warning"><i class="fa fa-edit"></i></button>|
                            <button onclick="Delete(@item.Id)" class="btn btn-danger"><i class="fa fa-trash"></i></button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <script>
            $(document).ready(function (e) {
                $("#tableId").dataTable({
                    "ordering": false
                });
            });
        </script>
    }
}
