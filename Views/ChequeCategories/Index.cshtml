@using Pension.Entities.Helpers
@model IEnumerable<PensionSystem.Entities.Models.ChequeCategory>

@{
	ViewData["Title"] = "Cheque Categories";
	ViewData["SubTitle"] = "List";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card">
	<div class="card-header">
		<div class="card-title">
			<a asp-action="Create" class="btn btn-primary"><i class="fa fa-plus"></i> Add New</a>
		</div>
	</div>

	<div class="card-body">
		<table class="table">
			<thead>
				<tr>
					<th>ID</th>
					<th>@Html.DisplayNameFor(model => model.Name)</th>
					<th>@Html.DisplayNameFor(model => model.CreatedDate)</th>
					<th>@Html.DisplayNameFor(model => model.ModifiedDate)</th>
					<th>Action</th>
				</tr>
			</thead>
			<tbody>
				@if (Model != null)
				{
					@foreach (var item in Model)
					{
						<tr>
							<td>@item.Id</td>
							<td>@item.Name</td>
							<td>@UserFormat.GetDateTime(item.CreatedDate)</td>
							<td>@UserFormat.GetDateTime(item.ModifiedDate)</td>
							<td>
								<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning"><i class="fa fa-edit"></i></a> |
								<a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fa fa-trash"></i></a>
							</td>
						</tr>
					}
				}
			</tbody>
		</table>

	</div>
</div>

